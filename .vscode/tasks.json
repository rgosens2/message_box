{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build mb7.app",
            "type": "shell",
            "command": "swiftc",
            "args": [
                "-g",
                "-Onone",
                "-framework", "Cocoa",
                "${fileBasenameNoExtension}.swift",
                "-o", "${fileBasenameNoExtension}.app/Contents/MacOS/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run mb7.app",
            "type": "shell",
            "command": "open",
            "args": [
                "mb7.app"
            ],
            "dependsOn": "Build mb7.app",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
